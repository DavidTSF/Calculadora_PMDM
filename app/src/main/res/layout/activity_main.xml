<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="177dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="263dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="606dp" />

    <Button
        android:id="@+id/buttonNumber1"
        style="@style/botonrecto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="onNumberButtonClick"
        android:text="1"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNumber4"
        app:layout_constraintEnd_toStartOf="@+id/buttonNumber2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/buttonNumber2"
        style="@style/botonrecto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="onNumberButtonClick"
        android:text="2"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNumber5"
        app:layout_constraintEnd_toStartOf="@+id/buttonNumber3"
        app:layout_constraintStart_toEndOf="@+id/buttonNumber1"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/buttonNumber3"
        style="@style/botonrecto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="onNumberButtonClick"
        android:text="3"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNumber6"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toEndOf="@+id/buttonNumber2"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/buttonNumber4"
        style="@style/botonrecto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="onNumberButtonClick"
        android:text="4"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNumber7"
        app:layout_constraintEnd_toStartOf="@+id/buttonNumber5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumber1" />

    <Button
        android:id="@+id/buttonNumber5"
        style="@style/botonrecto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="onNumberButtonClick"
        android:text="5"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNumber8"
        app:layout_constraintEnd_toStartOf="@+id/buttonNumber6"
        app:layout_constraintStart_toEndOf="@+id/buttonNumber4"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumber2" />

    <Button
        android:id="@+id/buttonNumber6"
        style="@style/botonrecto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="onNumberButtonClick"
        android:text="6"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNumber9"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toEndOf="@+id/buttonNumber5"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumber3" />

    <Button
        android:id="@+id/buttonNumber7"
        style="@style/botonrecto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="onNumberButtonClick"
        android:text="7"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNumber0"
        app:layout_constraintEnd_toStartOf="@+id/buttonNumber8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumber4" />

    <Button
        android:id="@+id/buttonNumber8"
        style="@style/botonrecto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="onNumberButtonClick"
        android:text="8"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNumber0"
        app:layout_constraintEnd_toStartOf="@+id/buttonNumber9"
        app:layout_constraintStart_toEndOf="@+id/buttonNumber7"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumber5" />

    <Button
        android:id="@+id/buttonNumber9"
        style="@style/botonrecto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="onNumberButtonClick"
        android:text="9"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNumber0"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toEndOf="@+id/buttonNumber8"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumber6" />

    <Button
        android:id="@+id/buttonNumber0"
        style="@style/botonrecto"
        android:layout_width="0dp"
        android:layout_height="112dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:onClick="onNumberButtonClick"
        android:text="0"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/buttonOperatorPlus"
        style="@style/botonrecto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:onClick="onOperatorButtonClick"
        android:text="+"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonOperatorDivide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonOperatorMinus"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/buttonOperatorMinus"
        style="@style/botonrecto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="onOperatorButtonClick"
        android:text="-"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonOperatorMulti"
        app:layout_constraintEnd_toStartOf="@+id/buttonOperatorPlus"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/buttonOperatorDivide"
        style="@style/botonrecto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:onClick="onOperatorButtonClick"
        android:text="/"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonOperatorMulti"
        app:layout_constraintTop_toBottomOf="@+id/buttonOperatorPlus" />

    <Button
        android:id="@+id/buttonOperatorMulti"
        style="@style/botonrecto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:onClick="onOperatorButtonClick"
        android:text="*"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/buttonOperatorDivide"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/buttonOperatorMinus" />

    <Button
        android:id="@+id/buttonOperatorCalculate"
        style="@style/botonrecto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:onClick="onCalculateButton"
        android:text="="
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonOperatorClear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <Button
        android:id="@+id/buttonOperatorClear"
        style="@style/botonrecto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:onClick="onClearButton"
        android:text="C"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/buttonOperatorCalculate" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="111dp" />

    <TextView
        android:id="@+id/outputScreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="#F0E8E8"
        android:elegantTextHeight="false"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textDirection="locale"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="294dp" />


